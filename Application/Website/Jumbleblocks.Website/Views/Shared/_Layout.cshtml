@using System.Configuration;
@using Jumbleblocks.Website;
@using Jumbleblocks.Website.Configuration;

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.2.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jumbleblocks-ui.js")" ></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <link rel="Stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />
</head>

<body>
    <header>
    @{
        var blogConfigurationSection = (BlogConfigurationSection)ConfigurationManager.GetSection(BlogContants.BlogSettingsConfigName);
        var titleImage = blogConfigurationSection.TitleImagePath;
    }

        <a href="@Url.Action("Index", "BlogPost")"><img src="@Url.Content(titleImage)" alt="site logo" /></a>
    </header>

     @RenderBody()
</body>
</html>

